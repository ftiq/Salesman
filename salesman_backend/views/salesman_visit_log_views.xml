<odoo>
    <record id="view_salesman_visit_log_form" model="ir.ui.view">
        <field name="name">salesman.visit.log.form</field>
        <field name="model">salesman.visit.log</field>
        <field name="arch" type="xml">
            <form string="سجل الزيارة">
                <sheet>
                    <group>
                        <field name="salesman_id"/>
                        <field name="customer_id"/>
                        <field name="date"/>
                        <field name="status"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_salesman_visit_log_tree" model="ir.ui.view">
        <field name="name">salesman.visit.log.tree</field>
        <field name="model">salesman.visit.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="salesman_id"/>
                <field name="customer_id"/>
                <field name="date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="action_salesman_visit_log" model="ir.actions.act_window">
        <field name="name">سجل الزيارات</field>
        <field name="res_model">salesman.visit.log</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_salesman_visit_log" name="سجل الزيارات" parent="menu_salesman_root" action="action_salesman_visit_log"/>
</odoo>

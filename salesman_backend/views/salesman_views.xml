<odoo>
    <!-- عرض الشجرة -->
    <record id="view_salesman_tree" model="ir.ui.view">
        <field name="name">salesman.tree</field>
        <field name="model">salesman.profile</field>
        <field name="arch" type="xml">
            <tree string="قائمة المناديب">
                <field name="name" string="اسم المندوب"/>
                <field name="mobile" string="موبايل"/>
                <field name="branch" string="الفرع"/>
            </tree>
        </field>
    </record>

    <!-- عرض النموذج -->
    <record id="view_salesman_form" model="ir.ui.view">
        <field name="name">salesman.form</field>
        <field name="model">salesman.profile</field>
        <field name="arch" type="xml">
            <form string="بيانات المندوب">
                <sheet>
                    <group>
                        <field name="name" string="اسم المندوب"/>
                        <field name="mobile" string="موبايل"/>
                        <field name="branch" string="الفرع"/>
                    </group>
                    
                    <notebook>
                        <page string="العملاء">
                            <field name="customer_ids">
                                <tree>
                                    <field name="name" string="اسم العميل"/>
                                    <field name="phone" string="هاتف"/>
                                </tree>
                            </field>
                        </page>
                        <page string="المسارات">
                            <field name="route_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- تعريف الإجراء -->
    <record id="action_salesman_profiles" model="ir.actions.act_window">
        <field name="name">المناديب</field>
        <field name="res_model">salesman.profile</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                اضغط لإنشاء مندوب جديد
            </p>
        </field>
    </record>
</odoo>

<odoo>
    <record id="view_salesman_daily_route_form" model="ir.ui.view">
        <field name="name">salesman.daily.route.form</field>
        <field name="model">salesman.daily.route</field>
        <field name="arch" type="xml">
            <form string="خط السير اليومي">
                <sheet>
                    <group>
                        <field name="salesman_id"/>
                        <field name="date"/>
                    </group>
                    <field name="route_line_ids">
                        <tree editable="bottom">
                            <field name="customer_id"/>
                            <field name="sequence"/>
                            <field name="note"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_salesman_daily_route_tree" model="ir.ui.view">
        <field name="name">salesman.daily.route.tree</field>
        <field name="model">salesman.daily.route</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="salesman_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="action_salesman_daily_route" model="ir.actions.act_window">
        <field name="name">خط السير اليومي</field>
        <field name="res_model">salesman.daily.route</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_salesman_root" name="المندوبون"/>
    <menuitem id="menu_salesman_daily_route" name="خط السير اليومي" parent="menu_salesman_root" action="action_salesman_daily_route"/>
</odoo>

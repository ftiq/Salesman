<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- شجرة عرض المناديب -->
    <record id="view_salesman_tree" model="ir.ui.view">
        <field name="name">salesman.tree</field>
        <field name="model">salesman.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="اسم المندوب"/>
                <field name="mobile" string="موبايل"/>
                <field name="branch" string="الفرع"/>
                <field name="max_visits" string="حد الزيارات"/>
            </tree>
        </field>
    </record>

    <!-- نموذج عرض المندوب -->
    <record id="view_salesman_form" model="ir.ui.view">
        <field name="name">salesman.form</field>
        <field name="model">salesman.profile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="اسم المندوب"/>
                        <field name="mobile" string="موبايل"/>
                        <field name="branch" string="الفرع"/>
                    </group>
                    
                    <notebook>
                        <!-- تبويب الصلاحيات -->
                        <page string="الصلاحيات">
                            <group>
                                <field name="allow_discount" string="السماح بالخصم"/>
                                <field name="allow_price_edit" string="تعديل الأسعار"/>
                                <field name="max_visits" string="الحد الأقصى للزيارات"/>
                            </group>
                        </page>
                        
                        <!-- تبويب العملاء -->
                        <page string="العملاء">
                            <field name="customer_ids">
                                <tree>
                                    <field name="name" string="اسم العميل"/>
                                    <field name="phone" string="هاتف"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- تبويب قسائم الدفع -->
                        <page string="قسائم الدفع">
                            <field name="payment_ids">
                                <tree>
                                    <field name="name" string="رقم السند"/>
                                    <field name="amount" string="المبلغ"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- إجراء عرض قائمة المناديب -->
    <record id="action_salesman_profiles" model="ir.actions.act_window">
        <field name="name">المناديب</field>
        <field name="res_model">salesman.profile</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

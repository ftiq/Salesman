<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- شجرة الزيارات -->
    <record id="view_visit_tree" model="ir.ui.view">
        <field name="name">visit.tree</field>
        <field name="model">salesman.visit.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="salesman_id" string="المندوب"/>
                <field name="customer_id" string="العميل"/>
                <field name="date" string="تاريخ الزيارة"/>
                <field name="action" string="الإجراء"/>
            </tree>
        </field>
    </record>

    <!-- نموذج الزيارة -->
    <record id="view_visit_form" model="ir.ui.view">
        <field name="name">visit.form</field>
        <field name="model">salesman.visit.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="salesman_id" string="المندوب"/>
                        <field name="customer_id" string="العميل"/>
                        <field name="date" string="تاريخ الزيارة"/>
                        <field name="action" string="الإجراء"/>
                    </group>
                    <group>
                        <field name="notes" string="ملاحظات"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- إجراء عرض سجل الزيارات -->
    <record id="action_visit_logs" model="ir.actions.act_window">
        <field name="name">سجل الزيارات</field>
        <field name="res_model">salesman.visit.log</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

<odoo>
    <record id="view_salesman_route_form" model="ir.ui.view">
        <field name="name">salesman.route.form</field>
        <field name="model">salesman.route</field>
        <field name="arch" type="xml">
            <form string="مسار المندوب">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="salesman_id"/>
                        <field name="customer_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_salesman_route_tree" model="ir.ui.view">
        <field name="name">salesman.route.tree</field>
        <field name="model">salesman.route</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="salesman_id"/>
            </tree>
        </field>
    </record>

    <record id="action_salesman_route" model="ir.actions.act_window">
        <field name="name">مسارات المندوبين</field>
        <field name="res_model">salesman.route</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_salesman_route" name="المسارات" parent="menu_salesman_root" action="action_salesman_route"/>
</odoo>

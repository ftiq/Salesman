<odoo>
  <!-- Tree View -->
  <record id="view_sales_visit_tree" model="ir.ui.view">
    <field name="name">sales.visit.tree</field>
    <field name="model">sales.visit</field>
    <field name="type">tree</field>                      <!-- ← هنا -->
    <field name="arch" type="xml">
      <tree string="Sales Visits">
        <field name="visit_date"/>
        <field name="visit_type"/>
        <field name="partner_id"/>
        <field name="salesman_id"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- Form View -->
  <record id="view_sales_visit_form" model="ir.ui.view">
    <field name="name">sales.visit.form</field>
    <field name="model">sales.visit</field>
    <field name="type">form</field>                       <!-- ← وهنا -->
    <field name="arch" type="xml">
      <form string="Sales Visit">
        <sheet>
          <group>
            <field name="visit_date"/>
            <field name="visit_type"/>
            <field name="partner_id"/>
            <field name="salesman_id"/>
          </group>
          <group>
            <field name="invoice_id"/>
            <field name="payment_id"/>
            <field name="order_id"/>
            <field name="delivery_done"/>
          </group>
          <notebook>
            <page string="Cancellation">
              <field name="state"/>
              <field name="cancel_reason"/>
            </page>
          </notebook>
        </sheet>
        <footer>
          <button name="action_done" type="object" string="Mark Done" states="draft"/>
          <button name="action_cancel" type="object" string="Cancel Visit" states="draft"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>

<odoo>
  <!-- Action window لعرض الزيارات -->
  <record id="action_sales_visit" model="ir.actions.act_window">
    <field name="name">Sales Visits</field>
    <field name="res_model">sales.visit</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        اضغط لإنشاء أول سجل زيارة ميدانية.
      </p>
    </field>
  </record>

  <!-- قائمة رئيسية ضمن Sales -->
  <menuitem
    id="menu_sales_visit_root"
    name="Visits"
    parent="sale.menu_sale_root"
    sequence="80"/>

  <!-- القائمة الفرعية التي تربط الـ Action -->
  <menuitem
    id="menu_sales_visit_all"
    name="All Visits"
    parent="menu_sales_visit_root"
    action="action_sales_visit"
    sequence="1"/>
</odoo>

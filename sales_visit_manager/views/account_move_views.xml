<odoo>
  <record id="view_account_move_salesman" model="ir.ui.view">
    <field name="name">account.move.salesman</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook/page[@name='invoice_line_ids']" position="before">
        <group string="Sales Visit">
          <field name="salesman_id"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
